<Window x:Name="login_screen" x:Class="WpfApp2.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="520">
    <Grid>
        <Label x:Name="login_ID" Content="Login ID:" HorizontalAlignment="Left" Margin="102,118,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <Label x:Name="password" Content="Password:" HorizontalAlignment="Left" Margin="91,149,0,0" VerticalAlignment="Top" Height="26" Width="68" HorizontalContentAlignment="Right"/>
        <TextBox x:Name="login_input" HorizontalAlignment="Left" Height="23" Margin="179,122,0,0" TextWrapping="Wrap" Text="Enter Login ID" VerticalAlignment="Top" Width="120" Cursor="IBeam"/>
        <TextBox x:Name="password_input" HorizontalAlignment="Left" Height="23" Margin="179,152,0,0" TextWrapping="Wrap" Text="Enter Password" VerticalAlignment="Top" Width="120" Cursor="IBeam"/>
        <Button x:Name="bt_login" Content="Login" HorizontalAlignment="Left" Margin="179,198,0,0" VerticalAlignment="Top" Width="120" Height="21" Click="bt_login_Click"/>

    </Grid>
</Window>
